<div class="container">
  <div class="hero">
    <div class="hero-content">
      <h1>Books BnB</h1>
      <hr class="hero-hr">
      <h3>A space for sharing your favourites reads</h3>
      <div class="card">
        <div class="card-content p-3 text-dark">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
            data: {turbo: false}) do |f| %>
            <div class="form-inputs">
              <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
              <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>
            <div class="form-actions">
              <%= f.button :submit, "Log in", class: "btn btn-primary-red" %>
            </div>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
